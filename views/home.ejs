              <button  name="group1"  id="agree" class="btn agree"  onclick='onUserSelected("<%=user.userName %>")' ><span class="cyan-text"><%= user.userName %></span></button>
             
               </label>
          </span>
          <p>
          </p>
          <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        </li>
         <% })%>
  </ul>
    <!-- ul end -->
        </div>

      </div>
